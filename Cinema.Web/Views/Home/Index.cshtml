@{
    ViewData["Title"] = ViewBag.Title;
}

<h1>Film</h1>
<div class="row">
    <div class="col-12 mb-3">
        <a href="javascript:void(0);" class="btn btn-info"
           onclick="film.openAddEditfilm()">Create</a>
    </div>
</div>
<table id="tbDepart" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>FilmId</th>
            <th>Film Name</th>
            <th>Title</th>
            <th>Description</th>
            <th>LinkTrailer</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<!-- Modal -->
<div id="addEditFilm" class="modal fade" data-backdrop="false" role="dialog">
    <div class="modal-dialog modal-lg">
        <form id="frmAddEditProduct">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Product</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="FilmId" name="FilmId">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="row form-group">
                                <div class="col-12">
                                    <img src="/images/noimage.jpg" id="Image" width="200" height="210" />
                                    <input type="file" id="FileUpload" class="custom-file" accept="image/*" onchange="film.uploadImage(this)" />
                                </div>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Film Name</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="FilmName" name="FilmName" class="form-control" data-rule-required="true">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Title</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="Title" name="Title" class="form-control" data-rule-required="true">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Description</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="Description" name="Description" class="form-control" data-rule-required="true">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Link Trailer</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="LinkTrailer" name="LinkTrailer" class="form-control" data-rule-required="true">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Category Film</label>
                                </div>
                                
                                <div class="col-9">
                                    <select class="custom-select" id="Category" name="Category">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <a href="javascript:;" class="btn btn-danger" onclick="film.create()">Save</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/js/home.js" asp-append-version="true"></script>
    <script src="~/js/film.js" asp-append-version="true"></script>
}
