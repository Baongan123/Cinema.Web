
@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_Layoutdemo.cshtml";
    int filmid = ViewBag.FilmId;
    List<Dayshow> dayShows = ViewBag.dayshows;
}
<div id="showfilm" style="border:2px solid">
    <input hidden id="FilmId" value="@filmid" />
    <div class="row">
        <div class="col-sm-6">
            <img style="padding:15px;width:100%;height:500px" id="Image" src="~/images/avatar-01.jpg" />
        </div>
        <div class="col-sm-6">
            <div style="padding:50px 5px">
                <div class="row form-group mt-10 justify-content-center mb-10">
                </div>
                <div class="row form-group mt-10">
                    <div class="col-3">
                        <label style="font-size:20px"><b><i>Tên phim:</i></b></label>
                    </div>
                    <div class="col-9" id="FilmName">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-3">
                        <label style="font-size:20px"><b><i>Tiêu đề:</i></b></label>
                    </div>
                    <div class="col-9" id="Title">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-3">
                        <label style="font-size:20px"><b><i>Thông tin:</i></b></label>
                    </div>
                    <div class="col-9" id="Description">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-3">
                        <label style="font-size:20px"><b><i>Loại phim:</i></b></label>
                    </div>
                    <div class="col-9" id="CategoryFilm">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-10">
    <hr />
    <div class="text-center mt-10 mb-10">
        <h2 style="margin:20px">Lịch chiếu</h2>
    </div>
    <hr />
    <div class="container mt-10" id="showing">
        <div class="row">
            <div class="col-3 text-center border-right">Ngày chiếu</div>
            <div class="col-9 text-center">Giờ chiếu</div>
        </div>
        <hr />
        @if (dayShows != null)
        {
            for (int i = 0; i < dayShows.Count; i++)
            {
                <div class="row">
                    <div class="col-3 text-center border-right">@dayShows[i].day.ToString("dd/MM/yyyy")</div>
                    <div class="col-9 text-center" id="timeshow_@i"></div>
                </div>
                <hr />
            }
        }
    </div>
</div>

<div class="container text-center mt-10">
    <hr />
    <h2 style="margin:20px">Trailer</h2>
    <hr />
    <iframe width="1000" height="600" id="trailer" src="" frameborder="0"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

<!-- Modal -->
<div id="bookfilm" class="modal fade" data-backdrop="false" role="dialog">
    <div class="modal-dialog modal-lg">
        <form id="frmAddEditEmployee">
            <div class="modal-content">
                <div class="modal-header" style="background-color:lightgray">
                    <h3 class="modal-title" style="margin-right:100px;">Đặt vé</h3>
                    <h5 class="modal-title" style="margin-right:20px;color:greenyellow">1.Chọn ghế</h5>
                    <h5 class="modal-title" style="margin-right:20px" id="nextFood">2.Chọn đồ ăn</h5>
                    <h5 class="modal-title" style="margin-right:20px" id="nextXN">3.Xác nhận</h5>
                    <h5 class="modal-title" style="margin-right:20px" id="nextTT">4.Thanh toán</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="FilmId" name="FilmId">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-7 border-right row">
                            <div class="col-12 row" id="addbookbody">
                            </div>
                            <div class="modal-footer ml-auto" id="buttonNext"></div>
                        </div>
                        <div class="col-5" style="margin: 0px 15px;">
                            <h3 class="text-center">Thông tin đặt vé</h3>
                            <div class="row border-bottom" id="desShowing">
                                <div class="col-5" style="height:40px;">Phim:</div>
                                <div class="col-7" id="FilmNameBK"></div>
                                <div class="col-5" style="height:40px;">Xuất chiếu:</div>
                                <div class="col-7" id="timeshowoffilm"></div>
                                <div class="col-5" style="height:40px;">Phòng chiếu:</div>
                                <div class="col-7" id="roomname"></div>
                                <div class="col-5" style="height:40px;">Tên ghế:</div>
                                <div class="col-7" id="seatname"></div>
                                <div class="col-5" style="height:40px;">Giá vé:</div>
                                <div class="col-7" id="priceticket"></div>
                            </div>
                            <div class="row border-bottom" id="desBookTicket">
                               
                            </div>
                            <div class="row border-bottom" id="desBookOrder">

                            </div>
                            <div class="row float-right" id="totalPrice">

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/homefilm.js" asp-append-version="true"></script>
}